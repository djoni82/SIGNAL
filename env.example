# CryptoAlphaPro Signal Bot v3.0 Environment Variables

# Telegram Configuration
TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# API Keys
CRYPTOPANIC_TOKEN=your_cryptopanic_token_here
DUNE_API_KEY=your_dune_api_key_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Database Configuration
POSTGRES_PASSWORD=cryptoalpha123
POSTGRES_DB=cryptoalpha
POSTGRES_USER=cryptoalpha

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Monitoring
GRAFANA_PASSWORD=admin123
PROMETHEUS_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/cryptoalpha.log

# Bot Configuration
BOT_MODE=production  # development, staging, production
MONITORING_INTERVAL=300  # seconds
SIGNAL_GENERATION_INTERVAL=60  # seconds

# Risk Management
MAX_LEVERAGE=50
MIN_LEVERAGE=1
DEFAULT_SL_PERCENT=2.0
DEFAULT_TP_PERCENT=6.0

# AI Thresholds
STRONG_BUY_THRESHOLD=0.6
BUY_THRESHOLD=0.4
NEUTRAL_THRESHOLD=0.3
SELL_THRESHOLD=0.2
STRONG_SELL_THRESHOLD=0.1

# Trading Pairs (comma-separated)
DEFAULT_PAIRS=BTC/USDT,ETH/USDT,SOL/USDT,DOGE/USDT,PEPE/USDT

# Performance
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=10
CACHE_TIMEOUT=30

# Security
ENCRYPTION_KEY=your_encryption_key_here
JWT_SECRET=your_jwt_secret_here

# External Services
BINANCE_API_URL=https://api.binance.com
BYBIT_API_URL=https://api.bybit.com
OKX_API_URL=https://www.okx.com

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30 